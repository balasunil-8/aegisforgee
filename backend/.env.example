# .env.example - Backend Environment Variable Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================================
# EDUCATIONAL NOTICE
# ============================================================================
# AegisForge is an educational security platform with INTENTIONALLY VULNERABLE
# Red Team endpoints. The default values below are for TESTING ONLY.
# ============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-secret-key-here-generate-random-value

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./backend/aegisforge.db
DATABASE_URL=sqlite:///backend/aegisforge.db

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:5001
CORS_ALLOW_CREDENTIALS=True

# Test Credentials (EDUCATIONAL ONLY)
TEST_USER_ALICE_PASSWORD=password123
TEST_USER_BOB_PASSWORD=securepass456
TEST_USER_ADMIN_PASSWORD=admin123
TEST_USER_CAROL_PASSWORD=carol789

# Default Vulnerable Credentials (for A05 misconfiguration demos)
DEMO_ADMIN_USERNAME=admin
DEMO_ADMIN_PASSWORD=admin
DEMO_ROOT_USERNAME=root
DEMO_ROOT_PASSWORD=root

# Logging
LOG_LEVEL=INFO
LOG_FILE=./backend/logs/aegisforge.log

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_STORAGE_URL=memory://
